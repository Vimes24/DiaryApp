        xmlns:local="clr-namespace:DiaryApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="393.05" Width="538.2" WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="None">
    <Grid>
        <DockPanel LastChildFill="False" Margin="0,0,-0.4,-0.2">
            <Canvas x:Name="SidebarPanel" Background="#FFDDD2D2" Width="145" />
            <Canvas x:Name="TopPanel" Background="#FFBCEAB1" Height="75" VerticalAlignment="Top" Margin="0" DockPanel.Dock="Top"/>
            <Canvas x:Name="BottomPanel" Height="42" VerticalAlignment="Top" DockPanel.Dock="Bottom" Margin="0" Background="#FFB2BED7"/>
        </DockPanel>
        <Button Content="Button" HorizontalAlignment="Left" Margin="230,130,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
